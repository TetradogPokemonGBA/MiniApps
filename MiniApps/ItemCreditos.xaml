<?xml version="1.0" encoding="utf-8"?>
<UserControl
	x:Class="MiniApps.ItemCreditos" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	Height="150">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition
				Height="20" />
			<RowDefinition />
		</Grid.RowDefinitions>
		<TextBox
			x:Name="txtNombreApp"
			IsReadOnly="True" />
		<Grid
			Grid.Row="1">
			<Grid.ColumnDefinitions>
				<ColumnDefinition
					Width="0.452513966480447*" />
				<ColumnDefinition
					Width="1.16970915372725*" />
				<ColumnDefinition
					Width="1.37709497206704*" />
			</Grid.ColumnDefinitions>
			<Image
				x:Name="imgMiniApp" />
			<TextBox
				x:Name="txtDescripcion"
				IsReadOnly="True"
				Grid.Column="1"
				TextWrapping="WrapWithOverflow" />
			<TextBox
				x:Name="txtCreditos"
				IsReadOnly="True"
				Grid.Column="2"
				TextWrapping="WrapWithOverflow" />
		</Grid>
	</Grid>
</UserControl>