<Window x:Class="MiniApps.Creditos"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MiniApps-Creditos miniapps" Height="300" Width="300">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="20"/>
			<RowDefinition/>
			<RowDefinition Height="20"/>
		</Grid.RowDefinitions>
		<TextBox Text="Aplicación desarrollada por Pikachu240(Wahackforo), Imagenes por Sangus103(Wahackforo)"/>
		<ScrollViewer VerticalScrollBarVisibility="Auto" Grid.Row="1">
			<StackPanel x:Name="stkMiniApps"/>
		</ScrollViewer>
		<Grid Grid.Row="2">
			<Grid.RowDefinitions>
				<RowDefinition/>
				<RowDefinition/>
			</Grid.RowDefinitions>
			<TextBlock Text="La aplicación es GNU ¿Quieres ver su código fuente?"/>
			<Grid Grid.Row="1">
				<Grid.ColumnDefinitions>
					<ColumnDefinition/>
					<ColumnDefinition/>
				</Grid.ColumnDefinitions>
				<Button x:Name="btnYes" Content="Si" Click="BtnYes_Click"/>
				<Button x:Name="btnNo" Content="No" Grid.Column="1" Click="BtnNo_Click"/>
			</Grid>
		</Grid>
	</Grid>
</Window>