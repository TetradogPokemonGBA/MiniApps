<Window x:Class="MiniApps.Creditos"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MiniApps-Creditos miniapps" Height="300" Width="300">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition/>
			<RowDefinition Height="20"/>
		</Grid.RowDefinitions>
		<ScrollViewer VerticalScrollBarVisibility="Auto">
			<TextBox x:Name="txtCreditos" IsReadOnly="True" TextWrapping="WrapWithOverflow"/>
		</ScrollViewer>
		<Grid Grid.Row="1">
			<Grid.ColumnDefinitions>
				<ColumnDefinition/>
				<ColumnDefinition/>
			</Grid.ColumnDefinitions>
		<Button x:Name="btnYes" Content="Si" Click="BtnYes_Click"/>
		<Button x:Name="btnNo" Content="No" Grid.Column="1" Click="BtnNo_Click"/>
		
		</Grid>
	</Grid>
</Window>